generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          String   @id @default(uuid())
  title       String
  description String
  endDate     DateTime
  videos      Video[]
}

model Video {
  id        String   @id @default(uuid())
  title     String
  sizeMB    Float
  url       String
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id])
}
